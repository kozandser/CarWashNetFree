<UserControl x:Class="CarWashNet.Apps.BaseAppControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mahapps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:local="clr-namespace:CarWashNet.Apps"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>        
        <DockPanel>            
            <DockPanel Style="{StaticResource AppPageHeaderStyle}" >
                <!--<Grid Width="40" DockPanel.Dock="Left"/>-->                
                <Button Style="{StaticResource AppPageBackButtonStyle}"
                        Click="Back_Click"/>
                <TextBlock Style="{StaticResource AppPageTitleStyle}"/>
                <ItemsControl Style="{StaticResource AppPageBackStackStyle}" />
                <Grid/>
            </DockPanel>
            <mahapps:TransitioningContentControl x:Name="TransitionControl" Transition="Left">
                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
            </mahapps:TransitioningContentControl>
        </DockPanel>
    </Grid>
</UserControl>
